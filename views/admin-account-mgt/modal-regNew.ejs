<div class="ui small modal" id="registerNewModal">
    <i class="close icon"></i>
    <div class="header">
        Register User
    </div>
    <div class="content">
        <form class="ui form" id="regNewform">
            <h4 class="ui dividing header">User Information</h4>
            <div class="field">
                <label>Name</label>
                <div class="three fields">
                    <div class="field">
                        <input type="text" name="fname" placeholder="First Name" required>
                    </div>
                    <div class="field">
                        <input type="text" name="lname" placeholder="Last Name" required>
                    </div>
                    <div class="field">
                        <input type="text" name="mname" placeholder="Middle Name">
                    </div>
                </div>
            </div>
            <div class="field">
                <label>Address</label>
                <textarea name="address" rows="2" required></textarea>
            </div>

            <h4 class="ui dividing header">User Credentials</h4>
            <div class="two fields">
                <div class="field">
                    <input name="uname" type="text" placeholder="Username" required>
                </div>
                <div class="field">
                    <input name="pword" type="password" placeholder="Password" required>
                </div>
            </div>

            <div class="ui hidden negative message"></div>
            <div class="ui hidden positive message"></div>
        </form>

    </div>
    <div class="actions">
        <button class="ui positive right labeled icon button">
            Register User
            <i class="checkmark icon"></i>
        </button>
        <button class="ui black deny button" type=reset form="regNewform">
            Reset
        </button>
    </div>
</div>