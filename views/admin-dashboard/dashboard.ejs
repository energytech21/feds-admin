</div>
<!-- end of sidebar -->
<div class="pusher">
    <!-- menu -->
    <div class="ui inverted black top fixed large menu" id="top-navigation-bar">
        <a class="item" onclick="toggle()">
            <i class="angle bars icon"></i>
        </a>
        <a class="item" href="#" alt="" style="cursor: pointer;" id="fedsheader">
            <div class="ui tiny image">
                <img src="../images/feds-poster.png">
            </div>
        </a>
        <div class="header item">
            <%-title-%>
        </div>
        <div class="right menu">
            <div class="ui pointing dropdown link item" id="bt-accset">
                <i class="ui center large user circle icon"></i>
                <div class="header"><b id="btn-logout-desc">Account</b></div>
                <div class="menu">
                    <a class="item" href="/logout"><i class='sign out alternate icon'></i>Logout</a>
                </div>
            </div>
        </div>
    </div>
    <!-- content -->

    <div class="ui divided container grid" id="dashboard-content">
        <div class="ui three wide column">

        </div>
        <div class="ui ten wide column" id="stickyDiv">
            <div class="ui left rail" style="z-index: -1 !important;">
                <div class="ui sticky grid" >
                    <div class="row">
                        <div class="sixteen wide column">
                            <div class="ui segment">
                                <div class="ui header">
                                    Smoke Level Indicator
                                </div>
                                <table class="ui celled inverted table" id="tblSmoke">
                                    <thead>
                                        <tr>
                                            <td>Level</td>
                                            <td>Particle per million (PPM)</td>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Level 1</td>
                                            <td id="lvl1">>= 400</td>
                                        </tr>
                                        <tr>
                                            <td>Level 2</td>
                                            <td id="lvl2">>= 800</td>
                                        </tr>
                                        <tr>
                                            <td>Level 3</td>
                                            <td id="lvl3">>= 1600</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="sixteen wide column">
                            <div class="ui segment">
                                <div class="ui header">
                                    Fire Level Indicator
                                </div>
                                <table class="ui celled inverted table" id="tblTemp">
                                    <thead>
                                        <tr>
                                            <td>Level</td>
                                            <td>Celcius (&deg; C)</td>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Level 1</td>
                                            <td id="lvl1">>= 60 (&deg; C)</td>
                                        </tr>
                                        <tr>
                                            <td>Level 2</td>
                                            <td id="lvl2">>= 80 (&deg; C)</td>
                                        </tr>
                                        <tr>
                                            <td>Level 3</td>
                                            <td id="lvl3">>= 100 (&deg; C)</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ui right rail" style="z-index: -1 !important;">
                <div class="ui sticky grid">
                    <div class="row">
                        <div class="sixteen wide column">
                            <div class="ui segment">
                                <div class="ui header">
                                    Earthquake Intensity Chart
                                </div>
                                <table class="ui celled inverted table">
                                    <thead>
                                        <tr>
                                            <td>Intensity</td>
                                            <td>Magnitude</td>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>I</td>
                                            <td>2.5 - 3.0</td>
                                        </tr>
                                        <tr>
                                            <td>II - III</td>
                                            <td>3.1 - 3.9</td>
                                        </tr>
                                        <tr>
                                            <td>IV - V</td>
                                            <td>4.0 - 4.9</td>
                                        </tr>
                                        <tr>
                                            <td>VI - VII</td>
                                            <td>5.0 - 5.9</td>
                                        </tr>
                                        <tr>
                                            <td>VIII - IX</td>
                                            <td>6.0 - 6.9</td>
                                        </tr>
                                        <tr>
                                            <td>X</td>
                                            <td>>= 7.0 </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="sixteen wide column">
                            <div class="ui segment">
                                <div class="ui header">
                                    Earthquake Level Indicator
                                </div>
                                <table class="ui celled inverted table" id="tblEarth">
                                    <thead>
                                        <tr>
                                            <td>Level</td>
                                            <td>Intensity Range</td>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Level 1 </td>
                                            <td id="lvl1">IV - V</td>
                                        </tr>
                                        <tr>
                                            <td>Level 2</td>
                                            <td id="lvl2">VI - VII</td>
                                        </tr>
                                        <tr>
                                            <td>Level 3</td>
                                            <td id="lvl3">>= VIII </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ui grid">
                <!-- start row 1 -->
                <div class="centered row">
                    <div class="ui huge statistics">
                        <div class="statistic">
                            <div class="value">
                                <i class="exclamation triangle icon"></i> <span id="eq_stat">loading....</span>%
                            </div>
                            <div class="label">
                                Earthquake Occurence Probabilty
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row 1 -->
                <!-- start row 2 -->
                <div class="row">
                    <div class="column">
                        <h1 class="ui header">Sensors Data</h1>
                        <div class="ui horizontal segments">

                            <div class="ui segment">
                                <h1 class="ui header">Smoke</h1>
                                <table class="ui selectable inverted grey table">
                                    <thead>
                                        <tr>
                                            <th>Location</th>
                                            <th>Data (PPM Particle Per Million)</th>
                                            <th>Time</th>
                                        </tr>
                                    </thead>
                                    <tbody id='tSmoke'>

                                    </tbody>
                                </table>
                            </div>
                            <div class="ui segment">
                                <h1 class="ui header">Temperature</h1>
                                <table class="ui selectable inverted grey table">
                                    <thead>
                                        <tr>
                                            <th>Location</th>
                                            <th>Data (Celsius)</th>
                                            <th>Time</th>
                                        </tr>
                                    </thead>
                                    <tbody id='tTemp'>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row 2 -->
                <!-- start row 3 -->
                <div class="row">
                    <div class="fluid wide column">
                        <div class="ui raised segment">
                            <div id="EQChart"></div>
                        </div>
                    </div>
                </div>
                <!-- end row 3-->
                <!-- Maps -->
                <div class="row">
                    <div class="fluid wide column">
                        <div class="ui raised segment">
                            <h1 class="header">Sensors Map</h1>
                            <div class="ui stackable centered grid" id='#mapArea'>
                                <div class="row" style="margin: 1rem !important;">
                                    <div class="center aligned  four wide column">
                                        <div class="ui huge  header">
                                            <i class="map marker alternate icon"></i>
                                            <div class="content">
                                                Select Floor Location
                                            </div>
                                        </div>
                                    </div>
                                    <div class="twelve wide column">
                                        <div class="ui four huge fluid buttons" id="floorButtons">
                                            <button id="floor1" class="ui inverted green button">1st Floor</button>
                                            <button id="floor2" class="ui inverted brown button">2nd Floor</button>
                                            <button id="floor3" class="ui inverted orange button">3rd Floor</button>
                                            <button id="floor4" class="ui inverted blue button">Covered Court</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="sixteen wide column">
                                        <div id="myMaps">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end Maps -->
        <div class="ui three wide column">

        </div>
    </div>
</div>

