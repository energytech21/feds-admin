<%- include('header.ejs'); %>
<!-- side bar -->
<div class="ui small sidebar inverted vertical left menu" id='sidebar' style="background: #7f0000;">
    <div class="item" style="background: #8e0000">
        <img src="../images/feds-poster.png" class="ui image tiny" alt="FEDS-POSTER">
    </div>
    <div class="item">
        <div class="header">Status Monitoring</div>
        <div class="menu">
            <a class="item" href="/dashboard">Dashboard</a>
            <a class="item" href="/device_history">Device Data History</a>
        </div>
    </div>

    <div class="item">
        <div class="header">Campus Issued Reports</div>
        <div class="menu">
            <a class="item" href="/report">View Reports</a>
        </div>
    </div>

    <div class="item">
        <div class="header">Accounts Management</div>
        <div class="menu">
            <a class="item" href="/AccountsManagement">Manage Accounts</a>
        </div>
    </div>


    <div class="item">
        <div class="header">Utilities</div>
        <div class="menu">
            <a class='item active' href='/config_alarm'>Alarm Configuration</a>
            <a class='item' href='#'>User Logs</a>
        </div>
    </div>
</div>
<!-- end of sidebar -->

<div class="pusher">
    <!-- menu -->
    <div class="ui inverted black top fixed large menu" id="top-navigation-bar">
        <a class="item" onclick="toggle()">
            <i class="angle bars icon"></i>
        </a>
        <a class="item" href="#" alt="" style="cursor: pointer;" id="fedsheader">
            <div class="ui tiny image">
                <img src="../images/feds-poster.png">
            </div>
        </a>
        <div class="header item">
            <%-title-%>
        </div>
        <div class="right menu">
            <div class="ui pointing dropdown link item" id="bt-accset">
                <i class="ui center large user circle icon"></i>
                <div class="header"><b id="btn-logout-desc">Account</b></div>
                <div class="menu">
                    <a class="item" href="/logout"><i class='sign out alternate icon'></i>Logout</a>
                </div>
            </div>
        </div>
    </div>
    <!-- content -->
    <div class="ui celled stackable grid" id="dashboard-content">
        <div class="row">
            <div class='ui fluid wide column'>
                <div class='ui segments'>
                    <div class='ui top attatched yellow inverted segment'>
                        <h1>Alarm Level Configuration</h1>
                    </div>
                    <div class='ui horizontal segments'>
                        <div class='ui segment'>
                            <div class='ui medium header'>Temperature (Celsius)</div>
                            <form class="ui form" id='tempThres'>
                                <div class="field">
                                    <label>Level 1</label>
                                    <input type="number" name='lvl1' id="lvl1" placeholder="Level 1 threshold">
                                </div>
                                <div class="field">
                                    <label>Level 2</label>
                                    <input type="number" name='lvl2' id="lvl2" placeholder="Level 2 threshold">
                                </div>
                                <div class="field">
                                    <label>Level 3</label>
                                    <input type="number" name='lvl3' id="lvl3" placeholder="Level 3 threshold">
                                </div>
                                <div class="ui green fluid button" onclick="saveThreshold('temp')">Save</div>
                            </form>
                        </div>
                        <div class='ui segment'>
                            <div class='ui medium header'>Smoke (Particle Per Million)</div>
                            <form class="ui form" id='smokeThres'>
                                <div class="field">
                                    <label>Level 1</label>
                                    <input type="number" name='lvl1' id="lvl1" placeholder="Level 1 threshold">
                                </div>
                                <div class="field">
                                    <label>Level 2</label>
                                    <input type="number" name='lvl2' id="lvl2" placeholder="Level 2 threshold">
                                </div>
                                <div class="field">
                                    <label>Level 3</label>
                                    <input type="number" name='lvl3' id="lvl3" placeholder="Level 3 threshold">
                                </div>
                                <div class="ui green fluid button" onclick="saveThreshold('smoke')">Save</div>
                            </form>
                        </div>
                        <div class='ui segment'>
                            <div class='ui medium header'>Earthquake (Intensity)</div>
                            <form class="ui form" id='earthThres'>
                                <div class="field">
                                    <label>Level 1</label>
                                    <select class="ui dropdown" name="lvl1" id="lvl1">
                                        <option value="">Intensity</option>
                                        <option value="1">I</option>
                                        <option value="2">II</option>
                                        <option value="3">III</option>
                                        <option value="4">IV</option>
                                        <option value="5">V</option>
                                        <option value="6">VI</option>
                                        <option value="7">VII</option>
                                        <option value="8">VIII</option>
                                        <option value="9">IX</option>
                                        <option value="10">X</option>
                                    </select>
                                </div>
                                <div class="field">
                                    <label>Level 2</label>
                                    <select class="ui dropdown" name="lvl2" id="lvl2">
                                        <option value="">Intensity</option>
                                        <option value="1">I</option>
                                        <option value="2">II</option>
                                        <option value="3">III</option>
                                        <option value="4">IV</option>
                                        <option value="5">V</option>
                                        <option value="6">VI</option>
                                        <option value="7">VII</option>
                                        <option value="8">VIII</option>
                                        <option value="9">IX</option>
                                        <option value="10">X</option>
                                    </select>
                                </div>
                                <div class="field">
                                    <label>Level 3</label>
                                    <select class="ui dropdown" name="lvl3" id="lvl3">
                                        <option value="">Intensity</option>
                                        <option value="1">I</option>
                                        <option value="2">II</option>
                                        <option value="3">III</option>
                                        <option value="4">IV</option>
                                        <option value="5">V</option>
                                        <option value="6">VI</option>
                                        <option value="7">VII</option>
                                        <option value="8">VIII</option>
                                        <option value="9">IX</option>
                                        <option value="10">X</option>
                                    </select>
                                </div>
                                <div class="ui green fluid button" onclick="saveThreshold('earth')">Save</div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class='ui fluid wide column'>
                <div class='ui segments'>
                    <div class='ui top attatched blue inverted segment'>
                        <h1>Alarm Message Settings</h1>
                    </div>
                    <div class='ui horizontal segments'>
                        <div class='ui segment'>
                            <form class="ui form" id='noticeForm'>
                                <div class="field">
                                    <label>Evacuation Notice Message</label>
                                    <textarea name='evacNotice' id='evacNotice'></textarea>
                                </div>
                                <div class='stackable ui fluid buttons'>
                                    <div class="ui green button" onclick="saveEvacNotice()">Save</div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

        </div>
    </div>
</div>

<%- include('footer.ejs'); %>