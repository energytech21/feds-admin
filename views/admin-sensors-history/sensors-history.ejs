<div class="pusher">
    <!-- menu -->
       <div class="ui inverted black top fixed large menu" id="top-navigation-bar">
        <a class="item" onclick="toggle()">
            <i class="angle bars icon"></i>
        </a>
        <a class="item" href="#" alt="" style="cursor: pointer;" id="fedsheader">
            <div class="ui tiny image">
                <img src="../images/feds-poster.png">
            </div>
        </a>
        <div class="header item">
            <%-title-%>
        </div>
        <div class="right menu">
            <div class="ui pointing dropdown link item" id="bt-accset">
                <i class="ui center large user circle icon"></i>
                <div class="header"><b id="btn-logout-desc">Account</b></div>
                <div class="menu">
                    <a class="item" href="/logout"><i class='sign out alternate icon'></i>Logout</a>
                </div>
            </div>
        </div>
    </div>
    <!-- content -->
    <div class="ui celled grid" id="dashboard-content">
        <div class="row">
            <div class="ui fluid wide column">
                <h1 class="ui header">Smoke Data</h1>
                <form class="ui form" id="smokeForm">
                    <div class="two fields">
                        <div class="field">
                            <div class="ui calendar" id="start_date">
                                <div class="ui input left icon">
                                    <i class="calendar icon"></i>
                                    <input type="text" placeholder="Start Date/Time" name="start_date">
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui calendar" id="end_date">
                                <div class="ui input left icon">
                                    <i class="calendar icon"></i>
                                    <input type="text" placeholder="End Date/Time" name="end_date">
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <select class="ui dropdown" name="loc_id">
                                <option value="" disabled selected>Location</option>
                            </select>
                        </div>
                        <input type="text" name="sensor_type" value="smoke" hidden>
                        <div class="field">
                            <div class="ui fluid submit green button" onclick="generateResult('#smokeForm')">Generate
                                Graph</div>
                        </div>
                    </div>
                </form>
                <div class="ui segment">
                    <div id="smokeChart">

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="ui fluid wide column">
                <h1 class="ui header">Temperature Data</h1>
                <form class="ui form" id="tempForm">
                    <div class="two fields">
                        <div class="field">
                            <div class="ui calendar" id="start_date">
                                <div class="ui input left icon">
                                    <i class="calendar icon"></i>
                                    <input type="text" placeholder="Start Date/Time" name="start_date">
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui calendar" id="end_date">
                                <div class="ui input left icon">
                                    <i class="calendar icon"></i>
                                    <input type="text" placeholder="End Date/Time" name="end_date">
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <select class="ui dropdown" name="loc_id">
                                <option value="" disabled selected>Location</option>
                            </select>
                        </div>
                        <input type="text" name="sensor_type" value="temp" hidden>
                        <div class="field">
                            <div class="ui fluid submit green button" onclick="generateResult('#tempForm')">Generate
                                Graph</div>
                        </div>
                    </div>
                </form>
                <div class="ui segment">
                    <div id="tempChart">

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="ui fluid wide column">
                <h1 class="ui header">Earthquake Vibration Data</h1>
                <form class="ui form" id="earthForm">
                    <div class="two fields">
                        <div class="field">
                            <div class="ui calendar" id="start_date">
                                <div class="ui input left icon">
                                    <i class="calendar icon"></i>
                                    <input type="text" placeholder="Start Date/Time" name="start_date">
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui calendar" id="end_date">
                                <div class="ui input left icon">
                                    <i class="calendar icon"></i>
                                    <input type="text" placeholder="End Date/Time" name="end_date">
                                </div>
                            </div>
                        </div>
                        <input type="text" name="sensor_type" value="earth" hidden>
                        <div class="field">
                            <div class="ui fluid submit green button" onclick="generateResult('#earthForm')">Generate
                                Graph</div>
                        </div>
                    </div>
                </form>
                <div class="ui segments">
                    <div class="ui segment">
                        <div id="EQChart">

                        </div>
                    </div>
                    <div class="ui segment">
                        <div id="EQChart2">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

